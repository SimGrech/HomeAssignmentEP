@model IEnumerable<ShoppingCart.Application.ViewModels.CartViewModel>


@{
    ViewData["Title"] = "Index";
}

<h1>Current User Cart</h1>

<div class="container">
    <div class="row">

        @Html.Partial("ViewCartPartial", Model)

    </div>
    @if (Model.Count() > 0)
    {
        <button class="mt-3 btn btn-block btn-primary">Checkout!</button>
    }



</div>



